@model Project.Models.Dto.RegionMunicipioDto


@{
    ViewData["Title"] = "Index";
}

<div class="form-body">

    <div class="row">

        <div class="col-md-12"><h4 class="card-title  mt-2">Administrar Regiones y Municipios</h4></div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">

                <div class="portlet-body table-responsive">
                    <div class="form-group  form-md-line-input has-info">

                        @using (Html.BeginForm("Index", "RegionToMunicipio", FormMethod.Post, new { @id = "formId", @class = "form-horizontal", Linksroles = "form" }))
                        {
                            if (Model.RegionListCombox != null)
                            {
                                @Html.DropDownList("RegionId", Model.RegionListCombox, "---Seleccione una región---", new { @id = "myDropDown", @onChange = "formId.submit()", @class = "form-control " })
                                <div class="form-control-focus"> </div>
                            }
                            else
                            {
                                <div class="col-md-6">
                                    <div class="form-group  form-md-line-input has-info">
                                        <label class="control-label col-md-2"> "Región" </label>

                                        <div class="col-md-4">
                                            <select class="  form-control"></select>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    @if (Model.MunicipiosList != null)
                    {
                <h4 class="card-title  mt-2">Lista de Municipios</h4>
                        using (Html.BeginForm("Save", "RegionToMunicipio", FormMethod.Post, new { @id = "foirmId", @class = "form-horizontal", Linksroles = "form" }))
                        {
                            <table class="table table-striped table-bordered table-hover dt-responsive " cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            Código  
                                        </th>
                                        <th>
                                            Nombre
                                        </th>
                                        <th>
                                            Seleccionar
                                        </th>
                                    </tr>
                                </thead>

                                @for (int i = 0; i < Model.MunicipiosList.Count; i++)
                                {
                            <tr>
                                @Html.HiddenFor(model => model.RegionId)

                                @Html.HiddenFor(model => model.MunicipiosList[i].MunicipioId)
                                <td>
                                    @Html.DisplayFor(model => model.MunicipiosList[i].Codigo)
                                    @Html.HiddenFor(model => model.MunicipiosList[i].Codigo)
                                </td>

                                <td>
                                    @Html.DisplayFor(model => model.MunicipiosList[i].Nombre)
                                    @Html.HiddenFor(model => model.MunicipiosList[i].Nombre)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(model => model.MunicipiosList[i].Active)
                                </td>
                            </tr>
                                }
                            </table>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-0 col-md-3">
                                        <input type="submit" class="btn btn-primary" value="Guardar" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

