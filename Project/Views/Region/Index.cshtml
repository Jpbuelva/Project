@model IEnumerable<Project.Models.Entity.RegionEntity>

@{
    ViewData["Title"] = "Index";
}


<div class="table-responsive">
    <div>
        <div class="row">

            <div class="col-md-12"><h4 class="card-title mb-4 mt-2">Administrar Regiones</h4></div>
            <div class="col-2"><a class="btn btn-success " asp-action="Create">Crear Nuevo</a> </div>
        </div>
    </div>
    <table class="table table-hover mt-2">
        <thead>
            <tr class="table-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>

                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info " asp-route-id="@item.RegionId">Editar</a>
                        <a asp-action="Details" class="btn btn-warning " asp-route-id="@item.RegionId">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RegionId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

